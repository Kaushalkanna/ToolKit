<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaushal.toolkit">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/toolkit_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ToolKitActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".flash.FlashActivity"> </activity>
        <activity android:name=".compass.CompassActivity"> </activity>
        <activity android:name=".level.LevelActivity"> </activity>
        <activity android:name=".db_meter.DbMeterActivity"> </activity>
        <activity android:name=".wishlist.ScanWishListActivity"> </activity>
        <activity android:name=".scanner.ScannerActivity"> </activity>
        <activity android:name=".wishlist.WishListActivity"> </activity>
        <activity android:name=".scale.ScaleActivity"> </activity>
        <activity android:name=".light_meter.LightMeterActivity"> </activity>
        <activity android:name=".magneto_meter.MagnetoMeterActivity"> </activity>
        <activity android:name=".pressure_meter.PressureMeterActivity"> </activity>
        <activity android:name=".thermo_meter.ThermoMeterAvtivity"> </activity>
    </application>

</manifest>