<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.kaushal.toolkit.MainActivity">


            <Button
                android:id="@+id/flash"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/flash_light_icon" />

            <Button
                android:id="@+id/compass"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignRight="@+id/textView"
                android:layout_alignTop="@+id/flash"
                android:background="@drawable/compass_icon" />

            <Button
                android:id="@+id/scale"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/flash"
                android:layout_alignStart="@+id/flash"
                android:layout_below="@+id/flash"
                android:layout_marginTop="20dp"
                android:background="@drawable/scale_icon" />

            <Button
                android:id="@+id/level"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/compass"
                android:layout_alignStart="@+id/compass"
                android:layout_alignTop="@+id/scale"
                android:layout_marginBottom="20dp"
                android:background="@drawable/level_icon" />

            <Button
                android:id="@+id/db_meter"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/scale"
                android:layout_alignStart="@+id/scale"
                android:layout_alignTop="@+id/barcode_scanner"
                android:background="@drawable/sound_meter_icon" />

            <Button
                android:id="@+id/barcode_scanner"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/level"
                android:layout_alignStart="@+id/level"
                android:layout_below="@+id/level"
                android:layout_marginTop="20dp"
                android:background="@drawable/barcode_scanner_icon"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Smart Tools"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="45dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/wishlist"
                android:background="@drawable/wish_list_icon"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/barcode_scanner"
                android:layout_alignLeft="@+id/barcode_scanner"
                android:layout_alignStart="@+id/barcode_scanner"
                android:layout_marginBottom="20dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/photo_meter"
                android:layout_alignTop="@+id/wishlist"
                android:layout_alignLeft="@+id/db_meter"
                android:layout_alignStart="@+id/db_meter"
                android:background="@drawable/photo_meter_icon"
                android:layout_marginBottom="20dp" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
